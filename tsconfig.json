{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./src",
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitOnError": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
