{
	"name": "node-server-ts",
	"version": "1.0.0",
	"description": "Test server for typescript support",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"format": "npx prettier --write .",
		"prod": "node --watch ./dist/index.js",
		"start": "ts-node-dev --respawn src/index.ts",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"author": "@sandy",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.18.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/node": "^18.13.0",
		"eslint": "^8.34.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"mrm": "^4.1.13",
		"prettier": "2.8.4",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.5"
	}
}
